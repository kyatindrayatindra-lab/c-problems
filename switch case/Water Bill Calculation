#include <stdio.h>

int main() {
    int connectionType, units;
    int bill = 0;

    scanf("%d %d", &connectionType, &units);

    switch(connectionType) {
        case 1:  // Domestic
            if(units <= 30) {
                bill = units * 5;
            } else {
                bill = (30 * 5) + ((units - 30) * 8);
            }
            break;

        case 2:  // Commercial
            bill = units * 10;
            break;

        default:
            printf("Invalid Connection Type\n");
            return 0;
    }

    printf("Bill â‚¹%d", bill);

    return 0;
}
